//type-relations

{
  book(id: "1"){
    id
    name
    author{
      id
    }
  }
}
--------------------------------------------

{
  author(id: "1"){
    id
    name
    books{
      id
      name
    }
  }
}

-------------------------------------------

{
  authors{
    id
    name
    books{
      id
      name
    }
  }
}

